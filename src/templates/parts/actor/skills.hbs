<section class="skills">
  <div class="items-list flexcol flexlarge">
    <ol class="items-list">
      <li class="item flexrow flex-group-center items-header">
        {{!-- Skill --}}
        <div class="item-name flex2">{{localize "SMT.skillPane.skill"}}</div>
        {{!-- Type --}}
        {{!-- Physical Attack | Magical Attack | Spell | Passive | Talk --}}
        <div class="item-skill-type">{{localize "SMT.skillPane.skillType"}}</div>
        {{!-- Target --}}
        {{!-- 1 target | All enemies | All allies | All combatants | Self --}}
        <div class="item-target">{{localize "SMT.skillPane.target"}}</div>
        {{!-- Cost or Ammo Count --}}
        <div class="item-cost">{{localize "SMT.skillPane.cost"}}</div>
        {{!-- TN --}}
        <div class="item-tn">{{localize "SMT.skillPane.tn"}}</div>
        {{!-- Total Power --}}
        <div class="item-power">{{localize "SMT.skillPane.power"}}</div>
        {{!-- Element --}}
        <div class="item-element">{{localize "SMT.skillPane.element"}}</div>
        <div class="item-element">{{localize "SMT.skillPane.expended"}}</div>
        {{!-- Short notes? --}}
        <div class="item-controls">
          <a class="item-control item-create" title="{{localize "SMT.sheet.newItem"}}" data-item-type="skill">
            <i class="fas fa-plus"></i> {{localize "SMT.sheet.addItem"}}</a>
        </div>
        </li>
        {{#each skills}}
        <li class="item flexrow flex-group-center" data-item-id="{{id}}">
          {{!-- Skill --}}
          <a class="item-name flex2 roll-skill roll-highlight">
            <div class="item-image">
              <img src="{{img}}" title="{{name}}" width="24" height="24" />
            </div>
            <div class="item-name">{{name}}</div>
          </a>
          {{!-- Type --}}
          {{!-- Physical Attack | Magical Attack | Spell | Passive | Talk --}}
          <div class="item-prop item-skill-type">{{localize (concat "SMT.skillTypes." system.skillType)}}</div>
        {{!-- Target --}}
        {{!-- 1 target | All enemies | All allies | All combatants | Self --}}
        <div class="item-prop item-target">{{localize (concat "SMT.target." system.target)}}</div>
        {{!-- Cost or Ammo Count --}}
        <div class="item-prop item-cost">
          {{#if (gt system.cost 0)}}{{concat system.cost " " (localize (concat "SMT.resources." system.costType))}}{{else}}â€”{{/if}}
        </div>
        {{!-- TN --}}
        <div class="item-prop item-tn">{{#if (eq system.accuracyStat "auto")}}Auto{{else}}{{system.tn}}{{/if}}</div>
        {{!-- Total Power --}}
        <div class="item-prop item-power">{{system.power}}</div>
        {{!-- Element --}}
        <div class="item-prop item-element">{{localize (concat "SMT.affinities." system.affinity)}}</div>
        <div class="item-prop item-expended"><input class="item-update" type="checkbox" data-field-name="system.expended"
            data-checked="{{system.expended}}" data-dtype="Boolean" {{checked system.expended}}
            {{#unless (eq system.skillType "other")}}disabled{{/unless}} />
        </div>
        {{!-- Short notes? --}}
        <div class="item-controls">
          <a class="item-control item-edit" title="{{localize "SMT.sheet.editItem"}}"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="{{localize "SMT.sheet.deleteItem"}}"><i class="fas fa-trash"></i></a>
        </div>
      </li>
      {{/each}}
    </ol>
  </div>
</section>