<header class="sheet-header">
  <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
  <div class="header-fields">
    <h1 class="charname">
      <input name="name" type="text" value="{{actor.name}}" placeholder="Name" />
    </h1>

    <div class="flexrow flex-group-center">
      <div class="flexrow">
        <label for="charClass" class="resource-label">{{localize "SMT.actorFields.charClass"}}</label>
        <select name="system.charClass" id="charClass">
          {{selectOptions SMT.charClasses selected=system.charClass localize=true}}
        </select>
      </div>

      <div class="flexrow">
        <label for="level" class="resource-label">{{localize "SMT.actorFields.level"}}</label>
        <input type="number" id="level" name="system.level" data-dtype="Number" value="{{system.level}}" />
      </div>
      <div class="flexrow">
        <label for="xp-field" class="resource-label">{{localize "SMT.actorFields.xp"}}</label>
        <input type="number" id="xp-field" name="system.xp" data-dtype="Number" value="{{system.xp}}" />
      </div>
<div class="flexrow">
  <label for="macca-field" class="resource-label">{{localize "SMT.actorFields.macca"}}</label>
  <input type="number" id="macca-field" name="system.macca" data-dtype="Number" value="{{system.macca}}" />
</div>
    </div>
    {{> "systems/smt-tc/templates/parts/actor/resources.hbs"}}
  </div>
</header>