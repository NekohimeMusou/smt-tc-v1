<section class="equipment">
  <div class="items-list flexcol flexlarge">
    <ol class="item-list">
      <li class="item flexrow flex-group-center items-header">
        {{!-- Item --}}
        <div class="item-name flex2">{{localize "SMT.actorSheet.items"}}</div>
        {{!-- Qty --}}
        <div class="item-qty">{{localize "SMT.actorSheet.qty"}}</div>
        {{!-- Target --}}
        <div class="item-target">{{localize "SMT.skillPane.target"}}</div>
        {{!-- Total Power (if any) --}}
        <div class="item-power">{{localize "SMT.skillPane.power"}}</div>
        {{!-- Element (if any) --}}
        <div class="item-element">{{localize "SMT.skillPane.element"}}</div>
        <div class="item-controls">
          <a class="item-control item-create" title="{{localize "SMT.sheet.newItem"}}" data-item-type="item">
            <i class="fas fa-plus"></i> {{localize "SMT.sheet.addItem"}}</a>
        </div>
      </li>

      {{#each items}}
      <li class="item item-entry flexrow flex-group-center flex-between" data-item-id="{{id}}">
        <a class="item-name flex2 roll-skill roll-highlight">
          <div class="item-image">
            <img src="{{img}}" title="{{name}}" width="24" height="24" />
          </div>
          <div class="item-name">{{name}}</div>
        </a>

        <input type="number" class="item-update" value="{{system.qty}}" data-dtype="Number" data-field-name="system.qty"
          placeholder="0" />
        <div class="item-prop item-target">{{localize (concat "SMT.target." system.target)}}</div>
        <div class="item-prop item-power">{{#if system.hasPowerRoll}}{{system.power}}{{else}}â€”{{/if}}</div>
        <div class="item-prop item-element">{{localize (concat "SMT.affinities." system.affinity)}}</div>
        <div class="item-controls">
          <a class="item-control item-edit" title="{{localize "SMT.sheet.editItem"}}"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="{{localize "SMT.sheet.deleteItem"}}"><i
              class="fas fa-trash"></i></a>
        </div>
      </li>
      {{/each}}
    </ol>
  </div>
</section>