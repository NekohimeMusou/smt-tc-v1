<section class="stats">
  {{! BASE | MAGATAMA (if Fiend) | LV | TOTAL | REG TN LABEL | REG TN | SPC TN LABEL | SPC TN }}
  <div class="resource-label flex-group-center flex0">{{localize SMT.actorSheet.stats}}</div>
  {{! Maybe wrap this in a div }}
  <table class="stats items-list">
    <thead class="stat items-header">
      <tr>
        {{! Stat name }}
        <th class="item-name">{{localize "SMT.actorSheet.stats"}}</th>
        {{! Base stat}}
        <th>{{localize "SMT.actorSheet.baseStat"}}</th>
        {{! Magatama mod}}
        <th>{{localize "SMT.actorSheet.magatamaShort"}}</th>
        {{! LV mod }}
        <th>{{localize "SMT.actorSheet.levelShort"}}</th>
        {{! Total stat }}
        <th>{{localize "SMT.actorSheet.statTotal"}}</th>
        {{! Stat TN }}
        <th>{{localize "SMT.actorSheet.tn"}}</th>
        {{! Special target numbers (Span 3 rows) }}
        <th rowspan="3">{{localize "SMT.actorSheet.specialTN"}}</th>
        {{! Derived Stats (Span 3 rows) }}
        <th rowspan="3">{{localize "SMT.actorSheet.derivedStats"}}</th>
      </tr>
    </thead>
    <tbody>
      {{! Individual stat data, with #each }}
      {{#each system.stats}}
      <tr class="stat">
        <th>{{localize (concat "SMT.stats." @key)}}</th>
        <td><input type="number" name="system.stats.{{@key}}.base" value="{{base}}" data-dtype="Number" /></td>
        <td><input type="number" name="system.stats.{{@key}}.magatama" value="{{magatama}}" data-dtype="Number" /></td>
        <td><input type="number" name="system.stats.{{@key}}.lv" value="{{lv}}" data-dtype="Number" /></td>
        <td><input type="number" name="system.stats.{{@key}}.value" value="{{value}}" data-dtype="Number" disabled /></td>
      </tr>
    </tbody>
  </table>
</section>