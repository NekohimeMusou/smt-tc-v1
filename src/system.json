{
  "id": "smt-tc",
  "title": "SMT RPG: Tokyo Conception (Unofficial)",
  "description": "Unofficial VTT system for playing Shin Megami Tensei: Tokyo Conception. This system contains no game content; the core rulebook is required to play.",
  "version": "0.0.1",
  "compatibility": {
    "minimum": 12,
    "verified": 12
  },

  "url": "https://github.com/NekohimeMusou/smt-tc",

  "authors": [
    {
      "name": "Nekohime Musou",
      "url": "https://github.com/NekohimeMusou",
      "discord": "nekohime.musou"
    }
  ],

  "esmodules": ["module/smt-tc.js"],
  "styles": ["styles/smt-tc.css"],
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json"
    }
  ],

  "documentTypes": {
    "Actor": {
      "character": { "htmlFields": ["notes"] }
    },
    "Item": {
      "skill": { "htmlFields": ["effect"] },
      "action": { "htmlFields": ["effect"]}
    }
  },

  "initiative": "1d10x + @ag",
  "grid": {
    "distance": 2,
    "units": "m"
  },
  "primaryTokenAttribute": "hp",
  "secondaryTokenAttribute": "mp"
}
